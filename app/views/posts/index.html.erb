<h1>Publicaciones Recientes</h1>
<%= link_to 'Nueva Publicación', new_post_path, class: 'btn btn-primary' %>
<table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Autor</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.user.name %></td>
        <td>
          <%= link_to 'Editar', edit_post_path(post), class: 'btn btn-secondary' %>
          <%= link_to 'Eliminar', post, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
